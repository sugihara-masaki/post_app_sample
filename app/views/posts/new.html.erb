<h1>新規投稿</h1>
<%= form_with(model: @post) do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control-file' %>
  </div>
  <div class='form-group'>
    <%= f.label :content %>
    <%= f.rich_text_area :content %>
  </div>
  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
